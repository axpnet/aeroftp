{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "AeroFTP",
  "version": "0.2.0",
  "identifier": "com.aeroftp.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "AeroFTP",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "Modern FTP Client",
    "longDescription": "AeroFTP is a fast, beautiful, and reliable FTP client built with Rust and React.",
    "category": "Utility",
    "copyright": "Copyright Â© 2025 axpdev"
  }
}